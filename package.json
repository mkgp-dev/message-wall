{
  "name": "message-wall",
  "version": "1.0.0",
  "description": "A simple Mini Message Board project submitted for The Odin Project course.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:css": "npx @tailwindcss/cli -i ./src/assets/styles.css -o ./public/styles.css",
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node src/server.ts\"",
    "dev:css": "npx @tailwindcss/cli -i ./src/assets/styles.css -o ./public/styles.css --watch"
  },
  "keywords": [],
  "author": "Mark Kenneth Pelayo (mkgp-dev)",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@fontsource-variable/roboto": "^5.2.9",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.2",
    "daisyui": "^5.5.8",
    "nodemon": "^3.1.11",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}